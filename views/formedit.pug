.container
  .card-body
    // logo section
    .app-brand.justify-content-center
      a.app-brand-link.gap-2(href='index.html')
        span.app-brand-logo
          img(src='/church-2-0/img/logo.png' alt='' width='40')
        span.app-brand-text.demo.text-body.fw-bolder Karibu Groceries Limited
    h4.mb-2  Welcome to KGL record-keeping software!
    // register Section
    form#formAuthentication.mb-3(method="POST" name= "Registration" action="/formreport/edit?id="+newform._id)
      .mb-3
        label.form-label(for='buyerName') Name of the buyer
        input#buyerName.form-control(type='text' name='buyerName' value=newform.buyerName)
      .mb-3
        .mb-3
          label.form-label(for='exampleInputEmail1') Name of the sales agent
          input#salesagentName.form-control(type='text' name='salesagentNamee' value=newform.salesagentNamee)
        .mb-3
          label.form-label(for='exampleInputEmail1') Email
          input#email.form-control(type='text' name='email' value=newform.email)
        .mb-3
          label.form-label(for='exampleInputEmail1') Phone number
          input#email.form-control(type='number' name='phoneNumber' value=newform.phoneNumber)
        .mb-3
          label.form-label(for='exampleInputEmail1') Amount due
          input#email.form-control(type='number' name='amountdue' value=newform.amountdue)
        .mb-3
          label.form-label(for='exampleInputPassword1') Gender
          select#branch.form-control(name='gender')
            option Select Gender
            option(value="female" selected=newform.gender==="female") Female
            option(value="male" selected=newform.gender==="male") Male
        .mb-3
          label.form-label(for='exampleInputPassword1') Name of the produce
          select#produce.form-control(name='produceName' )
            option Select type of produce 
            option(value="Beans" selected=newform.produceName==="Beans")  Beans
            option(value="cowpeas" selected=newform.produceName==="cowpeas")  cow peas
            option(value="maize" selected=newform.produceName==="maize")  Grain Maize
            option(value="nuts" selected=newform.produceName==="nuts")  G.nuts
            option(value="soybeans" selected=newform.produceName==="soybeans")  Soybeans
        .mb-3
          label.form-label(for='exampleInputPassword1')  Select name of Branch
          select#branch.form-control(name='branch')
            option Select name of Branch
            option(value="mukono" selected=newform.branch==="mukono") Mukono
            option(value="kasangati" selected=newform.branch==="kasangati") Kasangati
        .mb-3
          label.form-label(for='exampleInputEmail1') Tonnage
          input#email.form-control(type='number' name='tonnage' value=newform.tonnage)
        .mb-3
          label.form-label(for='exampleInputEmail1') National ID
          input#email.form-control(type='text' name='nationalId' value=newform.nationalId)
        .mb-3
          label.form-label(for='exampleInputEmail1') Dispatch
          input#email.form-control(type='number' name='dispatch' value=newform.dispatch)
        .mb-3
          label.form-label(for='exampleInputEmail1') Location
          input#email.form-control(type='text' name='location' value=newform.location)
        .mb-3
          label.form-label(for='exampleInputEmail1') Due Date
          input#email.form-control(type='date' name='dueDate' value=newform.dueDate)
