  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  link(rel='stylesheet' href='/public/css/login.css')
  title Login into KGL 
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container-fluid
    a.navbar-brand(href='#') Navbar
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link.active(aria-current='page' href='/index') Home
        li.nav-item
          a.nav-link(href='/form') Form page
        li.nav-item
          a.nav-link(href='/login') Login page
        li.nav-item
          a.nav-link(href='/sales') Sales
        li.nav-item
          a.nav-link(href='/salesreport') Sales Report
.container
  .card-body
    // logo section
    .app-brand.justify-content-center
      a.app-brand-link.gap-2(href='index.html')
        span.app-brand-logo
          img(src='/church-2-0/img/logo.png' alt='' width='40')
        span.app-brand-text.demo.text-body.fw-bolder Karibu Groceries Limited
    h4.mb-2  Sales report for KGL 
    table#table.table.table-bordered.table-hover.table-secondary
      thead
        tr
            th
            | Buyer Name
            th
            | Seller's Name
            th
            | Date
            th
            | Produce
            th
            | Branch
      tbody 
      if sales.length 
        each sale in sales
            tr
                td #{sale.buyerName}
                td #{sale.salesagentNamee}
                td #{sale.date}
                td #{sale.produce}
                td #{sale.branch} 
                td 
                    form(action="/salesreport/edit/"+sale._id)
                        input(type="hidden")
                        button(type="submit") edit
                td 
                    form.delete(action="/salesreport/delete" method="post")
                        input(type="hidden", placeholder="", name="id", value=sale._id)
                        button(type="submit") delete
                    
    // register Section
