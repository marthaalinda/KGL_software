.container
  h1 VENDOR REGISTRATION
  form.registration-form(name='registration' onsubmit='return formValidation()')
    table
      tr
        td
          label(for='name') Name of the buyer:
        td
          input#name.form-control(type='text' name='name' placeholder='your name')
      tr
        td
          label(for='name') Sales agent name:
        td
          input#name.form-control(type='text' name='name' placeholder='your name')
      tr
        td
          label(for='email') Email:
        td
          input#email.form-control(type='text' name='email' placeholder='your email')
      tr
        td
          label(for='phoneNumber') Phone Number:
        td
          input#phoneNumber.form-control(type='number' name='phoneNumber')
      tr
        td
          label(for='amountdue') Amount due:
        td
          input#phoneNumber.form-control(type='number' name='phoneNumber')
      tr
        td
          label(for='gender') Gender:
        td
          | Male: 
          input(type='radio' name='gender' value='male')
          |             Female: 
          input(type='radio' name='gender' value='female')
          |             Other: 
          input(type='radio' name='gender' value='other')
      tr
        td
          label(for='produceName') Type of produce
        td
          select#produceName(name='produceName')
            option(value='') Select type of produce
            option(value='English') Beans
            option(value='Spanish') cow peas
            option(value='Hindi') Grain Maize
            option(value='Arabic') G.nuts
            option(value='Russian') Soybeans
      tr
        td
          label(for='tonnage') Tonnage
        td
          input#tonnage.form-control(type='number' name='tonnage')
      tr
        td
          label(for='nationalId') National ID:
        td
          input.form-control(type='text' name='nationalId id=')
      tr
        td
          label(for='dispatch') Date of dispatch:
        td
          input#dispatch.form-control(type='date' name='Date of dispatch')
      tr
        td
          label(for='dispatch')  Location:
        td
          input.form-control(type='text' name='Location' id='location')
      tr
        td
          label(for='dispatch') Due date:
        td
          input#dueDate.form-control(type='date' name='dueDate')
      tr
        td(colspan='2')
          input.submit(type='submit' value='Register')
  script(src='./market.js')
