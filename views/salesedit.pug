.container
  .card-body
    // logo section
    .app-brand.justify-content-center
      a.app-brand-link.gap-2(href='index.html')
        span.app-brand-logo
          img(src='/church-2-0/img/logo.png' alt='' width='40')
        span.app-brand-text.demo.text-body.fw-bolder Karibu Groceries Limited
    h4.mb-2  Welcome to KGL record-keeping software!
    // register Section
    form#formAuthentication.mb-3(method="POST" name= "Registration" action="/salesreport/edit?id="+sale._id)
      .mb-3
        label.form-label(for='exampleInputEmail1') Name of the buyer
        input#buyerName.form-control(type='text' name='buyerName' value=sale.buyerName)
      .mb-3
        .mb-3
          label.form-label(for='exampleInputEmail1') Name of the sales agent
          input#salesagentName.form-control(type='text' name='salesagentNamee' value=sale.salesagentNamee)
        .mb-3
          label.form-label(for='exampleInputEmail1') Date
          input#email.form-control(type='date' name='date' value=sale.date)
        .mb-3
          label.form-label(for='exampleInputPassword1') Name of the produce
          select#produce.form-control(name='produce' )
            option Select type of produce 
            option(value="Beans" selected=sale.produce==="Beans")  Beans
            option(value="cowpeas" selected=sale.produce==="cowpeas")  cow peas
            option(value="maize" selected=sale.produce==="maize")  Grain Maize
            option(value="nuts" selected=sale.produce==="nuts")  G.nuts
            option(value="soybeans" selected=sale.produce==="soybeans")  Soybeans
        .mb-3
          label.form-label(for='exampleInputPassword1')  Select name of Branch
          select#branch.form-control(name='branch')
            option Select name of Branch
            option(value="mukono" selected=sale.branch==="mukono") Mukono
            option(value="kasangati" selected=sale.branch==="kasangati") Kasangati
        //- .mb-3.form-check
        //-   input#exampleCheck1.form-check-input(type='checkbox')
        //-   label.form-check-label(for='exampleCheck1')  I have read, understood and agree to the terms and conditions
        button.btn.btn-primary.d-grid.w-100(type='submit') Submit
